{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Orders list</h1>

    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>DateTime</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('orders.show', { 'id': entity.id }) }}">({{ entity.id }})</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.datetime|date('Y-m-d H:i:s') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('orders.show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                        </li>
                        <li>
                            <a href="{{ path('orders.edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orders.new') }}">
                Create a new order
            </a>
        </li>
    </ul>
{% endblock %}
