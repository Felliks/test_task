{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Order</h1>

    <table class="record_properties table table-bordered table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.datetime|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('orders.list') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('orders.edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}